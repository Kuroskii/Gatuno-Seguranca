<body>
    <section id="cadastro">
        <h1>CADASTRO</h1>
        <form name="cad" action="http://localhost:3000/cadastro" method="post" >
            <div>
                <p>Nome</p>
                <input type="text" name="nm_user" class="textfield" size="50" autocomplete="off" required>
            </div>
            <div>
                <p>Email</p>
                <input type="text" name="ds_email"  class="textfield"  onblur="verificarEmail(this.value)" size="50" autocomplete="off" required>
            </div>
            <div><span id="msg"></span></div>
            <div>
                <p>Data de Nascimento</p>
                <input type="date" name="dt_nasc" class="textfield" autocomplete="off" required>
            </div>
            <div class="enviar">
            </br>
                <button type="submit" id="submit">Cadastrar</button>
            </div>
        </form>        
        <div class="esqueciCad">
            <a href="login">Voltar</a>
        </div>
    </section>
</body>
